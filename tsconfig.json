{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true, // Skips type checking for external libraries
    "noImplicitAny": false,
    "strict": false, // Disable strict mode entirely
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    // Add these additional leniency settings
    "skipDefaultLibCheck": true, // Skip type checking of default libraries
    "noUncheckedIndexedAccess": false, // Allow unchecked indexed access (avoid errors on undefined properties)
    "allowUnreachableCode": true, // Allow unreachable code without errors
    "allowUnusedLabels": true // Allow unused labels in code
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
